{
    "extends": [
        "standard",
        "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "brace-style": 2,
        "comma-style": 2,
        "indent": [2, 4],
        "max-len": [2, 120, 4],
        "max-params": [2, 4],
        "quotes": [2, "single"],
        "one-var": [2, "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never"
        }],
        "no-mixed-operators": 0,
        "no-trailing-spaces": 2
    }
}
